<root>

     <Volatile>
		<position/><!-- 总是同步到客户端 -->
		<!--<position> 0 </position> 设置为0不同步到客户端-->
		<!-- <yaw/>没有显示的设置则总是同步到客户端 -->
		<!--<pitch> 20 </pitch> 和玩家位置20米以内同步到客户端-->
		<yaw/>
		<pitch/>
		<roll/>

		<!-- 优化VolatileInfo，关于VolatileInfo可以参考API文档，优化后服务器在确定实体在地面时（navigate）将不同步实体的Y坐标，客户端需要判断实体isOnGround，如果实体在地面则需要做贴地计算。
			在高层建筑内寻路可能需要关闭优化，让服务器同步Y，这样才能精确计算上下层位置。
			(不填默认为true)
		-->
		<optimized> false </optimized>
	</Volatile>

    <Interfaces>
        <Interface>     Character       </Interface>
        <Interface>     Motion          </Interface>
    </Interfaces>

	<Properties>
		<!-- 实体生成时的位置 -->
	    <SpawnPoint>
	        <Type>      VECTOR3      </Type>
	        <Flags>     OWN_CLIENT   </Flags>
	    </SpawnPoint>

	    <!-- 主背包 -->
        <MainBag>
            <Type>          BAG_INFO    </Type>
            <Flags>			BASE		</Flags>
            <Persistent>	true		</Persistent>
        </MainBag>
        <!-- 技能快捷栏 -->
        <SkillBag>
            <Type>          BAG_INFO    </Type>
            <Flags>			BASE		</Flags>
            <Persistent>	true		</Persistent>
        </SkillBag>
        <!-- Buff快捷栏 -->
        <BuffBag>
            <Type>          BAG_INFO    </Type>
            <Flags>			BASE		</Flags>
            <Persistent>	true		</Persistent>
        </BuffBag>
        <!-- 装备快捷栏 -->
        <EquipBag>
            <Type>          BAG_INFO    </Type>
            <Flags>			BASE		</Flags>
            <Persistent>	true		</Persistent>
        </EquipBag>

	</Properties>

	<ClientMethods>
		<!-- 请求获取所有背包数据回调函数 -->
	    <OnReqBagList>
	        <!-- 从上往下数是 : MainBag SkillBag BuffBag EquipBag -->
	        <Arg>   BAG_INFO    </Arg>
	        <Arg>   BAG_INFO    </Arg>
	        <Arg>   BAG_INFO    </Arg>
	        <Arg>   BAG_INFO    </Arg>
	    </OnReqBagList>
	    <!-- 增加物品回调函数 -->
	    <OnIncreaseGood>
            <Arg>   BAG_TYPE    </Arg>
            <Arg>   GOOD_INFO   </Arg>
	    </OnIncreaseGood>
        <!-- 减少物品回调函数 -->
        <OnReduceGood>
            <Arg>   REDUCE_RES  </Arg>
            <Arg>   BAG_TYPE    </Arg>
            <Arg>   GOOD_INFO   </Arg>
        </OnReduceGood>
        <!-- 移动物品回调函数 -->
        <OnPassGood>
            <!--<Arg>   PASS_RES    </Arg>-->
            <Arg>   BAG_TYPE        </Arg>
            <Arg>   GOOD_INFO       </Arg>
            <Arg>   BAG_TYPE        </Arg>
            <Arg>   GOOD_INFO       </Arg>
        </OnPassGood>
	</ClientMethods>

	<BaseMethods>
	    <!-- 请求获取所有背包数据 -->
	    <ReqBagList>
	        <Exposed/>
	    </ReqBagList>
	    <!-- 增加物品到背包 -->
	    <IncreaseGood>
	        <Arg>   GOOD_ID     </Arg>
	        <Arg>   GOOD_TYPE   </Arg>
	    </IncreaseGood>
	    <!-- 从背包减少物品 -->
        <ReduceGood>
            <Exposed/>
            <Arg>   BAG_TYPE    </Arg>
            <Arg>   BLOCK_ID    </Arg>
        </ReduceGood>
        <!-- 传递物品到某类型背包的某位置 -->
        <PassGood>
            <Exposed/>
            <Arg>   BAG_TYPE      </Arg>
            <Arg>   BLOCK_ID      </Arg>
            <Arg>   BAG_TYPE      </Arg>
            <Arg>   BLOCK_ID      </Arg>
        </PassGood>
	</BaseMethods>

	<CellMethods>
	</CellMethods>

</root>
